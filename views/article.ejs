<html>
    <head>
        <title>article</title>
        <%include quote.ejs%>
    </head>
    <body>
        <%include header.ejs%>
            您好：<%=username%>
            <div class="container">
                    <%for(var i=0;i<message.length;i++){%>
                        <div class="row">
                            <div class="col">
                            </div>
                            <div class="col-6">
                                <div class="card" style="margin-top: 20px;">
                                    <div class="card-body">
                                        <h4 class="card-title"><%=message[i].title%></h4>
                                        <h6 class="card-subtitle mb-2 text-muted"><%=message[i].author%></h6>
                                        <p><%=message[i].time%></p>
                                        <p class="card-text"><%=message[i].text%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                            </div>
                        </div>
                    <%}%>
                    <div class="row">
                        <div class="col">
                            <button><a href="http://localhost:3000/article/newarticle">写日记</a></button>
                        </div>
                    </div>
            </div>


        <%include footer.ejs%>
    </body>
</html>